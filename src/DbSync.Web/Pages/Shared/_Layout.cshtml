<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DbSync</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-arrow-left-right"></i> MKY-Sync
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <ul class="navbar-nav">
                        @if (User.IsInRole("Admin") || User.IsInRole("DBA"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/"><i class="bi bi-speedometer2"></i> Dashboard</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="/Clientes"><i class="bi bi-building"></i> Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ObjetosBase"><i class="bi bi-box-seam"></i> Objetos Base</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/BaseVersions"><i class="bi bi-tag"></i> Versiones Base</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Compare"><i class="bi bi-file-diff"></i> Comparar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/CrossCompare"><i class="bi bi-people"></i> Cruzar Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Versions"><i class="bi bi-git"></i> Versiones</a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("DBA"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Sync/History"><i class="bi bi-clock-history"></i> Historial</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Scanner"><i class="bi bi-radar"></i> Scanner</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Scanner/Logs"><i class="bi bi-journal-text"></i> Scan Logs</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Usuarios"><i class="bi bi-people-fill"></i> Usuarios</a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @User.Identity?.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                                <li>
                                    <span class="dropdown-item-text">
                                        @if (User.IsInRole("Admin")) { <span class="badge bg-danger">Admin</span> }
                                        else if (User.IsInRole("DBA")) { <span class="badge bg-warning text-dark">DBA</span> }
                                        else { <span class="badge bg-info">Reader</span> }
                                    </span>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form method="post" asp-page="/Account/Logout">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right"></i> Cerrar Sesion
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-1 px-2">
        @RenderBody()
    </div>

    <footer class="text-center text-muted py-1" style="font-size:0.7rem">
        v@(System.Reflection.Assembly.GetExecutingAssembly().GetName().Version?.ToString(3) ?? "?")
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/table-utils.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
