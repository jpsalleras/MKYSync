@page
@model DbSync.Web.Pages.Versions.CompareModel
@{
    ViewData["Title"] = "Comparar Versiones";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-arrow-left-right"></i> Comparar Versiones</h2>
    <a href="/Versions?clienteId=@Model.ClienteId&ambiente=@Model.Ambiente" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Volver al Historial
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.Result != null)
{
    <div class="compare-header p-3 mb-3">
        <div class="row align-items-center">
            <div class="col-5">
                <div class="version-label">Versión A</div>
                <div class="version-name">
                    @Model.Result.Version1.FullName
                    <span class="badge bg-secondary ms-1">v@(Model.Result.Version1.VersionNumber)</span>
                </div>
                <div class="version-meta">
                    <i class="bi bi-person"></i> @Model.Result.Version1.ModifiedBy
                    &mdash; <i class="bi bi-clock"></i> @Model.Result.Version1.ModifiedDate.ToString("dd/MM/yyyy HH:mm:ss")
                    @if (Model.Result.Version1.HostName != null)
                    {
                        <text> &mdash; <i class="bi bi-pc-display"></i> @Model.Result.Version1.HostName</text>
                    }
                </div>
            </div>
            <div class="col-2 text-center">
                @if (Model.Result.AreEqual)
                {
                    <span class="compare-badge-equal"><i class="bi bi-check-lg"></i> Iguales</span>
                }
                else
                {
                    <span class="compare-badge-diff">
                        <i class="bi bi-plus-lg"></i>@Model.Result.LinesAdded
                        &nbsp;<i class="bi bi-dash-lg"></i>@Model.Result.LinesRemoved
                    </span>
                }
            </div>
            <div class="col-5 text-end">
                <div class="version-label">
                    @(Model.VsActual ? "Actual en Ambiente" : "Versión B")
                </div>
                @if (Model.VsActual)
                {
                    <div class="version-name">
                        Definición actual en @Model.Ambiente
                    </div>
                    <div class="version-meta">
                        @if (Model.Result.Version2.ModifiedDate != default)
                        {
                            <text><i class="bi bi-clock"></i> Última modificación: @Model.Result.Version2.ModifiedDate.ToString("dd/MM/yyyy HH:mm:ss")</text>
                        }
                    </div>
                }
                else
                {
                    <div class="version-name">
                        @Model.Result.Version2.FullName
                        <span class="badge bg-secondary ms-1">v@(Model.Result.Version2.VersionNumber)</span>
                    </div>
                    <div class="version-meta">
                        <i class="bi bi-person"></i> @Model.Result.Version2.ModifiedBy
                        &mdash; <i class="bi bi-clock"></i> @Model.Result.Version2.ModifiedDate.ToString("dd/MM/yyyy HH:mm:ss")
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Diff visual -->
    <div class="diff-container">
        @Html.Raw(Model.Result.DiffHtml)
    </div>
}
