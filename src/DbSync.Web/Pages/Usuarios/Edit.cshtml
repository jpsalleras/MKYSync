@page
@model DbSync.Web.Pages.Usuarios.EditModel
@{
    ViewData["Title"] = Model.IsNew ? "Nuevo Usuario" : "Editar Usuario";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="bi bi-person-gear"></i> @ViewData["Title"]</h2>
    <a href="/Usuarios" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header">Datos del Usuario</div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Usuario <span class="text-danger">*</span></label>
                            <input asp-for="UserName" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nombre Completo <span class="text-danger">*</span></label>
                        <input asp-for="NombreCompleto" class="form-control" required />
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">
                                Contrasena @(Model.IsNew ? "" : "(dejar vacio para no cambiar)")
                                @if (Model.IsNew) { <span class="text-danger">*</span> }
                            </label>
                            <input asp-for="Password" type="password" class="form-control"
                                   required="@Model.IsNew" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Activo</label>
                            <div class="form-check mt-2">
                                <input asp-for="Activo" class="form-check-input" />
                                <label class="form-check-label">Habilitado</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Rol</label>
                        <div>
                            @foreach (var role in Model.AllRoles)
                            {
                                var desc = role.Name switch
                                {
                                    "Admin" => "Acceso completo a todo el sistema",
                                    "DBA" => "Puede modificar ambientes y ejecutar scans",
                                    "Ejecutar" => "Puede confirmar y ejecutar sincronizaciones",
                                    "Reader" => "Solo lectura, consulta de datos",
                                    _ => ""
                                };
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="SelectedRole"
                                           value="@role.Name" id="role_@role.Name"
                                           checked="@(Model.SelectedRole == role.Name)" />
                                    <label class="form-check-label" for="role_@role.Name">
                                        <strong>@role.Name</strong> <small class="text-muted">- @desc</small>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" data-loading="Guardando...">
                            <i class="bi bi-check-lg"></i> Guardar
                        </button>
                        @if (!Model.IsNew)
                        {
                            <button type="submit" asp-page-handler="Delete" class="btn btn-outline-danger"
                                    onclick="return confirm('Eliminar este usuario?')">
                                <i class="bi bi-trash"></i> Eliminar
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card" id="clientesCard">
                <div class="card-header">
                    Clientes Asignados
                    <small class="text-muted">(no aplica para Admin)</small>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.AllClientes.Any())
                    {
                        @foreach (var cliente in Model.AllClientes)
                        {
                            var isChecked = Model.SelectedClienteIds.Contains(cliente.Id);
                            <div class="form-check">
                                <input class="form-check-input cliente-check" type="checkbox"
                                       name="SelectedClienteIds" value="@cliente.Id"
                                       id="cliente_@cliente.Id"
                                       @(isChecked ? "checked" : "") />
                                <label class="form-check-label" for="cliente_@cliente.Id">
                                    <code>@cliente.Codigo</code> - @cliente.Nombre
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No hay clientes activos.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
<script>
    function updateClientesVisibility() {
        var selectedRole = document.querySelector('input[name="SelectedRole"]:checked');
        var card = document.getElementById('clientesCard');
        if (selectedRole && selectedRole.value === 'Admin') {
            card.style.opacity = '0.4';
            card.querySelector('.card-body').style.pointerEvents = 'none';
        } else {
            card.style.opacity = '1';
            card.querySelector('.card-body').style.pointerEvents = '';
        }
    }

    document.querySelectorAll('input[name="SelectedRole"]').forEach(function(r) {
        r.addEventListener('change', updateClientesVisibility);
    });
    updateClientesVisibility();
</script>
}
