@page
@model DbSync.Web.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-building"></i> Clientes</h2>
    @if (User.IsInRole("Admin"))
    {
        <a href="/Clientes/Edit" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Nuevo Cliente</a>
    }
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-search-bar">
            <span class="search-count" data-search-count="tblClientes">@Model.Clientes.Count registros</span>
            <input type="text" class="form-control form-control-sm" data-table-search="tblClientes" placeholder="Buscar..." />
        </div>
        <table id="tblClientes" class="table table-hover mb-0 sortable-table">
            <thead class="table-light">
                <tr>
                    <th>CÃ³digo</th>
                    <th>Nombre</th>
                    <th>Ambientes</th>
                    <th>Customs</th>
                    <th>Estado</th>
                    <th data-no-sort>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model.Clientes)
                {
                    <tr>
                        <td><code>@cliente.Codigo</code></td>
                        <td>@cliente.Nombre</td>
                        <td>
                            @foreach (var amb in cliente.Ambientes.OrderBy(a => a.Ambiente))
                            {
                                <span class="badge bg-secondary me-1">@amb.Ambiente</span>
                            }
                        </td>
                        <td>
                            @if (cliente.ObjetosCustom.Any())
                            {
                                <span class="badge badge-custom text-white">@cliente.ObjetosCustom.Count</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            @if (cliente.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="/Clientes/Edit?id=@cliente.Id" class="btn btn-outline-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                }
                                <a href="/Compare?clienteId=@cliente.Id" class="btn btn-outline-info" title="Comparar">
                                    <i class="bi bi-file-diff"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
